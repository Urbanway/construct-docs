$(document).ready(function () {
    "use strict";

    if (!ip.isManagementState) {
        $('a[rel=lightbox]').colorbox({
            rel: 'ipColorbox',
            maxWidth: '90%',
            maxHeight: '90%'
        });
        $('a[rel=standaloneLightbox]').colorbox({
            maxWidth: '90%',
            maxHeight: '90%'
        });
    }
});
